FROM jenkins/jenkins:lts-jdk17
USER root
# Install Docker CLI so Jenkins can run docker build/push
RUN apt-get update && apt-get install -y ca-certificates curl gnupg lsb-release git \
 && install -m 0755 -d /etc/apt/keyrings \
 && curl -fsSL https://download.docker.com/linux/debian/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg \
 && chmod a+r /etc/apt/keyrings/docker.gpg \
 && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/debian bookworm stable" > /etc/apt/sources.list.d/docker.list \
 && apt-get update && apt-get install -y docker-ce-cli \
 && rm -rf /var/lib/apt/lists/*

# Preinstall key plugins
COPY plugins.txt /usr/share/jenkins/ref/plugins.txt
RUN jenkins-plugin-cli --plugin-file /usr/share/jenkins/ref/plugins.txt

# Seed security: disable anonymous; create admin + non-admin ci-bot
COPY init.groovy.d/ /usr/share/jenkins/ref/init.groovy.d/
USER jenkins
